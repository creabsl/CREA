# Production Environment Variables
# Copy this file to .env and update with actual production values

MONGO_URI=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/crea?retryWrites=true&w=majority&appName=crea
JWT_SECRET=your_secure_random_jwt_secret_here

# Server Configuration
PORT=5000
NODE_ENV=production

# CRITICAL: For file upload persistence on production
# Set this to a persistent directory that survives server restarts/redeploys
# On Linux servers: /var/www/crea/uploads or /home/username/crea-uploads
# On Windows servers: C:\crea\uploads or D:\data\uploads
PUBLIC_UPLOADS_PATH=/var/www/crea/uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=CREA <your_email@gmail.com>

ADMIN_EMAIL=admin@crea.org.in
ADMIN_PASSWORD=your_secure_password

# Razorpay Payment Gateway (Production Keys)
RAZORPAY_KEY_ID=rzp_live_your_production_key
RAZORPAY_KEY_SECRET=your_production_secret_key

# Client URLs (for CORS)
CLIENT_URL=https://crea.org.in

# Database Seeding (disable in production)
SEED_ON_START=false
